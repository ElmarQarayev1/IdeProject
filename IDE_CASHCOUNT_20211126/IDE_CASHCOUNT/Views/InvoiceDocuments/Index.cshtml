        function PopupForm(url,id) {
            $.get(url)
                .done(function (response) {
                    $("#MyModalBodyDiv1").html(response);
                    $("#MyModal").modal("show");
                    var dtTable = $("#example2").DataTable({
                        "scrollY": "400px",
