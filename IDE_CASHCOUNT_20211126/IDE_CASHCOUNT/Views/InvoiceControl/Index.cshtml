                            "data": "CONFIRM_DATETIME"
                        },
                { "data": "FICHENO" },
               // {
               //     "data": "DATE_"
               // },
                       {
                           "data": "DATE_", render: function (d) {
                               if(d!="" && d!=null) return moment(d).format('DD/MM/YYYY');
                           }
                        },
                        { "data": "CLIENT_CODE" },
                        { "data": "CLIENT_NAME"},
                        { "data": "WH_CODE" },
                        { "data": "WH_NAME" },
                        { "data": "GROSSTOTAL" },
                        { "data": "TOTALDISCOUNT" },
                        { "data": "NETTOTAL" },

                        {
                            "data": function (row, type, set) {
                                return "<a class='d-block text-center' href='#' id='itemDropdown1' role='button' data-toggle='dropdown' > <i class='fa fa-ellipsis-v' aria-hidden='true'></i> </a> <div class='dropdown-menu dropdown-menu-right shadow' aria-labelledby='#Dropdown1'><a onclick=PopupForm('@Url.Action("Details", "InvoiceControl")'," + row.RECORD_ID + ","+row.TRCODE+") class='dropdown-item' ><i class='fas fa-info-circle mr-2'></i>Ətraflı</a></div>";
                            }
                        },

                    ],
                dom: 'Bfrtip',
                "buttons":
                    [
                        {
                            extend: 'copy',
                            className: 'copyButton',
                            title: 'Sayım sənədləri',
                            text: '<i class="fas fa-copy m-1"></i>Kopyala'
                        },
                        {
                            extend: 'excel',
                            className: 'excelButton',
                            title: 'Sayım sənədləri',
                            text: '<i class="fas fa-file-excel m-1"></i>Excel'
                        },
                        {
                            extend: 'print',
                            className: 'printButton',
                            title: 'Sayım sənədləri',
                            text: '<i class="fas fa-print m-1"></i>Print'
                        }
                    ],

            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

        var $table = $('#example1').DataTable();
        function ShowFilterResult() {
            showLoading("Gözləyin zəhmət olmasa...");
            var startDate = $("#begin_date").datepicker({ dateFormat: 'dd,MM,yyyy' }).val();
            var endDate = $("#end_date").datepicker({ dateFormat: 'dd,MM,yyyy' }).val();
            var confirmBeginDate = $("#confirm_begin_date").datepicker({ dateFormat: 'dd,MM,yyyy' }).val();
            var confirmEndDate = $("#confirm_end_date").datepicker({ dateFormat: 'dd,MM,yyyy' }).val();
            var checkControlCount = 0;
            //0- botth uncheck 1-control false 2-control true  3-both check
            if ($("#ControlTrue").is(':checked') && $("#ControlFalse").is(':checked')) {
                checkControlCount = 3;
            }
            else if (!$("#ControlTrue").is(':checked') && $("#ControlFalse").is(':checked')) {
                checkControlCount = 1;
            }
            else if ($("#ControlTrue").is(':checked') && !$("#ControlFalse").is(':checked')) {
                checkControlCount = 2;
            }
            //if ($('#ControlTrue').prop('checked', true) && $('#ControlFalse').prop('checked', true)) {
            //    checkControlCount = 3;
            //}
            //else if ($('#ControlTrue').prop('checked', true) && $('#ControlFalse').prop('checked', false)) {
            //    checkControlCount = 2;
            //}
            //else if ($('#ControlTrue').prop('checked', false) && $('#ControlFalse').prop('checked', true)) {
            //    checkControlCount = 1;
            //}

            if (startDate > endDate) {
                stopLoading();
                Swal.fire({
                    icon: 'error',
                    title: 'Xəta baş verdi',
                    text: 'Sənəd tarix aralığı düzgün deyil!',
                });
                return;
            }
            if (confirmBeginDate > confirmEndDate) {
                stopLoading();
                Swal.fire({
                    icon: 'error',
                    title: 'Xəta baş verdi',
                    text: 'Təsdiqlənmə tarix aralığı düzgün deyil!',
                });
                return;
            }

            var comments = $('#txtComments').val();
            var selectedId = $('#hdnSelectedId').val();
            $.ajax({
                //url: '/InvoiceDocuments/GetFilterData?begin_date=' + selectedId + '&comments=' + escape(comments),
                url: "/InvoiceControl/GetFilterData/",
                type: "post",
                data: { begin_date: $("#begin_date").val(), end_date: $("#end_date").val(), confirm_begin_date: $("#confirm_begin_date").val(), confirm_end_date: $("#confirm_end_date").val(), warehouses: $("#wh").val(), clientsCode: $("#clnt").val(), clientsName: $("#clntName").val(), controlCount: checkControlCount },
                dataType: 'json',
                success: function (response) {
                    if (response.success) {
                        $table.rows().remove();
                        $("#FilterModal").modal("hide");
                        $table.rows.add(response.data).draw();
                        stopLoading();
                        return;
                    }
                    else {
                        stopLoading();
                        Swal.fire({
                            icon: 'error',
                            title: 'Xəta baş verdi',
                            text: 'Məlumat yüklənə bilmədi!',
                        });
                        return;
                    }

                }
            });
        }




        function PopupForm(url,id,trcode) {
            $.get(url)
                .done(function (response) {
                    $("#MyModalBodyDiv1").html(response);
                    $("#MyModal").modal("show");
                    var dtTable = $("#example2").DataTable({
                        "scrollY": "400px",
                        "scrollCollapse": true,
                        "responsive": true,
                        "lengthChange": false,
                        "autoWidth": false,
                        "language": dataTablesLanguage,

                        "ajax": {
                            "url": "/InvoiceControl/GetDataDetails?id="+id+"&trCode="+trcode,
                            "type": "GET",
                            "datatype": "json"
                        },
                        "columns": [
                            {
                                "data": "ITM_CODE", "orderable": false, "searchable": false,
                            },
                            { "data": "ITM_NAME" },
                            { "data": "ITM_CODE" },
                            { "data": "AMOUNT" },
                            { "data": "PRICE" },
                            { "data": "TOTAL" },
                        ],
                        orderCellsTop: true,
                        "order": [[1, 'asc']]
                    });

                    dtTable.on('order.dt search.dt', function () {
                        dtTable.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                            cell.innerHTML = i + 1;
                        });
                    }).draw();

                    dtTable.responsive.recalc();
                });
        }


        function callPartialDataTable(model) {

            var table = $("#PartialData").DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                "language": dataTablesLanguage,

                "ajax": {
                    "url": "/Home/GetPartialsData?model=" + model,
                    "type": "GET",
                    "datatype": "json"
                },
                'columnDefs': [
                    {
                        'targets': 0,
                        'checkboxes': {
                            'selectRow': true
                        }
                    }
                ],
                'select': {
                    'style': 'multi'
                },
                'order': [[1, 'asc']],
                "columns": [
                    { "data": "CLIENT_CODE" },
                    { "data": "CLIENT_CODE" },
                    { "data": "CLIENT_NAME" },
                    { "data": "CLIENT_NAME2" },
                ],

            });

            var table = $("#PartialData1").DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                "language": dataTablesLanguage,

                "ajax": {
                    "url": "/Home/GetPartialsData?model=" + model,
                    "type": "GET",
                    "datatype": "json"
                },
                'columnDefs': [
                    {
                        'targets': 0,
                        'checkboxes': {
                            'selectRow': true
                        }
                    }
                ],
                'select': {
                    'style': 'multi'
                },
                'order': [[1, 'asc']],
                "columns": [
                    { "data": "WH_CODE" },
                    { "data": "WH_CODE" },
                    { "data": "WH_NAME" }
                ],
            });

            // Handle form submission event
            $('.btnClient').on('click', function (e) {
                var type = 'ClientsListModal';
                var input = 'clnt';
                var rows_selected = table.column(0).checkboxes.selected();

                // Iterate over all selected checkboxes
                $.each(rows_selected, function (index, rowId) {
                    // Create a hidden element
                    $(".submit").append(
                        $('<input>')
                            .attr('type', 'hidden')
                            .attr('name', 'id[]')
                            .val(rowId)
                    );
                });

                //// Output form data to a console
                $('#' + input).val(rows_selected.join(","));
                $('#' + type).modal('hide');

                // Remove added elements
                $('input[name="id\[\]"]', ".submit").remove();

                // Prevent actual form submission
                e.preventDefault();
            });

            // Handle form submission event
            $('.btnWarehouse').on('click', function (e) {
                var type = 'WarehouseListModal';
                var input = 'wh';
                var rows_selected = table.column(0).checkboxes.selected();

                // Iterate over all selected checkboxes
                $.each(rows_selected, function (index, rowId) {
                    // Create a hidden element
                    $(".submit").append(
                        $('<input>')
                            .attr('type', 'hidden')
                            .attr('name', 'id[]')
                            .val(rowId)
                    );
                });

                //// Output form data to a console
                $('#' + input).val(rows_selected.join(","));
                $('#' + type).modal('hide');

                // Remove added elements
                $('input[name="id\[\]"]', ".submit").remove();

                // Prevent actual form submission
                e.preventDefault();
            });


        }


    </script>





