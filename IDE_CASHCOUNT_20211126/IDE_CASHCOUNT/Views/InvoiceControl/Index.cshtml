            };

            $.datepicker.setDefaults($.datepicker.regional['it']);

            $("#begin_date").datepicker({ dateFormat: "dd-mm-yy" });
            $("#end_date").datepicker({ dateFormat: "dd-mm-yy" });
            $("#confirm_begin_date").datepicker({ dateFormat: "dd-mm-yy" });
            $("#confirm_end_date").datepicker({ dateFormat: "dd-mm-yy" });

        });</script>
    <script>

        $("#example1").DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                "language": dataTablesLanguage,

                  "ajax": {
                            "url": "/InvoiceControl/GetData",
                            "type": "GET",
                            "datatype": "json"
                        },
            "columns": [
                        { "data": "RECORD_ID" },
