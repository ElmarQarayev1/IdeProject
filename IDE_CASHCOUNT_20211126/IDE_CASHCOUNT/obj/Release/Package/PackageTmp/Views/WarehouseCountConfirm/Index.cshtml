@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{
    <link rel="stylesheet" href="~/Content/lib/admin-lte/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/Content/lib/admin-lte/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
    <link href="https://code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.css" rel="stylesheet">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/Content/lib/admin-lte/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Content/lib/admin-lte/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/Content/lib/admin-lte/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
    <style>

        #example1_filter {
            display: inline;
            float: right
        }

        th, td {
            font-size: 12px;
        }
    </style>
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid d-flex justify-content-between">
        <div>
            <ol class="breadcrumb float-sm-left" style="font-size:14px">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")"> Ana Səhifə</a></li>
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "WarehouseControl")">Anbar Sayimi</a></li>
            </ol>
        </div>

        <div>
            <a class="btn btn-outline-info" data-toggle="modal" data-target="#FilterTesdiqle" href="#" id="btnSave" style="float:right" onclick="ShowConfirmDialog()"></i>Sayim Elave Etmek</a>
        </div>
    </div><!-- /.container-fluid -->
</div>



<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">


                <div class="card">
                    <!-- <div class="card-header">
                      <h3 class="card-title">DataTable with default features</h3>
                    </div> -->
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-striped table-bordered dt-responsive nowrap" width="100%">
                            <thead>
                                <tr>

                                    <th>Mal kodu</th>
                                    <th>Mal adı</th>
                                    <th>Sayim Miqdarı</th>
                                    <th>Anbar Qaliqi</th>
                                    <th>Sayim Artiqi</th>
                                    <th>Sayim Eskiki</th>
                                    <th>Qiyməti</th>
                                    <th>Ümumi Məbləğ</th>
                                    <th class="all dt-optional-btn"></th>
                                </tr>

                            </thead>
                            <tbody>
                            </tbody>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->

<div class="modal" tabindex="-1" role="dialog" id="MyModal" style="top:0;">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="MyModalBodyDiv1">

            </div>

        </div>
    </div>
</div>


<div class="modal" tabindex="-1" role="dialog" id="MyModal2" style="top:0; ">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="MyModalBodyDiv2">

            </div>

        </div>
    </div>
</div>


<div class="modal fade" id="myModalConfirm" tabindex="-1"  role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
           
            </div>
            <div class="modal-body">
                <h4 class="modal-title" id="myModalLabel">Sayim Senedleri Elave edilecek.Eminsiniz?</h4>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Xeyir</button>
                <button type="button" onclick="SaveingSayim()" class="btn btn-primary">Beli</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    @*InputMask*@
    <script src="~/Content/lib/admin-lte/plugins/moment/moment.min.js"></script>
    <script src="~/Content/lib/admin-lte/plugins/inputmask/jquery.inputmask.min.js"></script>
    @*date-range-picker*@
    <script src="~/Content/lib/admin-lte//plugins/daterangepicker/daterangepicker.js"></script>
    @*Tempusdominus Bootstrap 4*@
    <script src="~/Content/lib/admin-lte/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="https://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
    <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/lib/admin-lte/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/lib/admin-lte/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/Content/lib/admin-lte/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/Content/lib/admin-lte/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/Content/lib/admin-lte/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/Content/lib/admin-lte/plugins/jszip/jszip.min.js"></script>
    <script src="~/Content/lib/admin-lte/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/Content/lib/admin-lte/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/Content/lib/admin-lte/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/Content/lib/admin-lte/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/Content/lib/admin-lte/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <script src="https://gyrocode.github.io/jquery-datatables-checkboxes/1.2.10/css/dataTables.checkboxes.css"></script>
    <script src="https://gyrocode.github.io/jquery-datatables-checkboxes/1.2.10/js/dataTables.checkboxes.min.js"></script>
    <script src="~/Content/js/datatables-helper.js"></script>


    <!-- Page specific script -->
    <script>
        $(function () {
            $('#datemask').inputmask('dd/mm/yyyy', { 'placeholder': 'dd/mm/yyyy' })
            $('[data-mask]').inputmask();
            $.datepicker.regional['it'] = {
                closeText: 'Bağla', //
                currentText: 'Oggi', // set today text
                monthNames: ['Yanvar', 'Fevral', 'Mart', 'Aprel', 'May', 'İyun', 'İyul', 'Avqust', 'Sentyabr', 'Oktyabr', 'Noyabr', 'Dekabr'], // set month names
                monthNamesShort: ['Yan', 'Fev', 'Mart', 'Apr', 'May', 'İyun', 'İyul', 'Avq', 'Sent', 'Okt', 'Noy', 'Dek'], // set short month names
                dayNames: ['Bazar ertesi', 'Çərşənbə axşamı', 'Çərşənbə', 'Cümə axşamı', 'Cümə', 'Şənbə', 'Bazar'], // set days names
                dayNamesShort: ['BE', 'ÇA', 'Ç', 'CA', 'C', 'Ş', 'B'], // set short day names
                dayNamesMin: ['BE', 'ÇA', 'Ç', 'CA', 'C', 'Ş', 'B'], // set more short days names
                dateFormat: 'dd/mm/yy' // set format date
            };

            $.datepicker.setDefaults($.datepicker.regional['it']);

            $("#begin_date").datepicker({ dateFormat: "dd-mm-yy" });
            $("#end_date").datepicker({ dateFormat: "dd-mm-yy" });
            $("#c_begin_date").datepicker({ dateFormat: "dd-mm-yy" });
            $("#c_end_date").datepicker({ dateFormat: "dd-mm-yy" });
            $("#c_onhand_date").datepicker({ dateFormat: "dd-mm-yy" });
            $("#c_confirm_date").datepicker({ dateFormat: "dd-mm-yy" });

        });

       

        
    })

    </script>
    <script>

        $("#example1").DataTable({
            "responsive": true,
            "lengthChange": false,
            "autoWidth": false,
            "language": dataTablesLanguage,

            "ajax": {
                "url": "/WarehouseCountConfirm/GetData",
                "type": "GET",
                "datatype": "json"
            },
            "columns": [

                { "data": "ITM_CODE" },
                { "data": "ITM_NAME" },

                { "data": "AMOUNT" },
                { "data": "ONHAND" },
                { "data": "COUNT_PLUS" },
                { "data": "COUNT_MINUS" },
                { "data": "PRICE" },
                { "data": "TOTAL" },
            ],
            dom: 'Bfrtip',
            "buttons":
                [
                    {
                        extend: 'copy',
                        className: 'copyButton',
                        title: 'Sayilan Mallar',
                        text: '<i class="fas fa-copy m-1"></i>Kopyala'
                    },
                    {
                        extend: 'excel',
                        className: 'excelButton',
                        title: 'Sayilan Mallar',
                        text: '<i class="fas fa-file-excel m-1"></i>Excel'
                    },
                    {
                        extend: 'print',
                        className: 'printButton',
                        title: 'Sayilan Mallar',
                        text: '<i class="fas fa-print m-1"></i>Print'
                    }
                ],

        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

        var $table = $('#example1').DataTable();

        function ShowConfirmDialog() {
            $('#myModalConfirm').modal('show');
        }

        function SaveingSayim() {
            showLoading("Gözləyin sayim senedleri elave edilir...");

            $.ajax({
                //url: '/InvoiceDocuments/GetFilterData?begin_date=' + selectedId + '&comments=' + escape(comments),
                url: "/WarehouseCountConfirm/SetSayimSenedleri/",
                type: "post",
                //data: { begin_date: $("#begin_date").val(), end_date: $("#end_date").val(), warehouses: $("#wh").val() },
                dataType: 'json',
                success: function (response) {
                    if (response.success) {
                        //alert("Error: " + response.responseText);  
                        Swal.fire({
                            icon: 'success',
                            title: 'Emeliyyat ugurla tamamlanmisdir',
                            text: 'Sayim senedleri elave edildi !',
                        });
                        stopLoading();
                        return;
                    }
                    else {
                        stopLoading();
                        Swal.fire({
                            icon: 'error',
                            title: 'Xəta baş verdi',
                            text: 'Sayim senedleri elave edile bilmedi !',
                        });
                        return;
                    }

                }
            });

           

          

          
            
        }
               
    </script>



}


